# dbt project configuration for {{ app_name }}

name: "{{ app_name }}"
version: "1.0.0"

profile: "{{ app_name }}"

model-paths: ["models"]
analysis-paths: ["analyses"]
test-paths: ["tests"]
seed-paths: ["seeds"]
macro-paths: ["macros"]
snapshot-paths: ["snapshots"]

clean-targets:
  - "target"
  - "dbt_packages"

models:
  {{ app_name }}:
    staging:
      +materialized: view
    silver:
      +materialized: view
    gold:
      +materialized: view
