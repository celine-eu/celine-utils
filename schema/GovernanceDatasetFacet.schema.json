{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "GovernanceDatasetFacet",
    "type": "object",
    "required": [
        "_producer",
        "_schemaURL"
    ],
    "properties": {
        "_producer": {
            "type": "string",
            "format": "uri"
        },
        "_schemaURL": {
            "type": "string",
            "format": "uri"
        },
        "accessLevel": {
            "type": [
                "string",
                "null"
            ],
            "enum": [
                "open",
                "internal",
                "restricted"
            ]
        },
        "attribution": {
            "type": [
                "string",
                "null"
            ],
            "description": "Mandatory attribution text required by data license"
        },
        "access_requirements": {
            "type": [
                "string",
                "null"
            ],
            "enum": [
                "all",
                "partner",
                "contract"
            ],
            "description": "Preconditions required to access this dataset"
        },
        "classification": {
            "type": [
                "string",
                "null"
            ],
            "enum": [
                "pii",
                "red",
                "yellow",
                "green"
            ]
        },
        "retentionDays": {
            "type": [
                "integer",
                "null"
            ]
        },
        "license": {
            "type": [
                "string",
                "null"
            ]
        },
        "sourceSystem": {
            "type": [
                "string",
                "null"
            ]
        }
    }
}