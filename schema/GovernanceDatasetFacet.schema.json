{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "GovernanceDatasetFacet",
    "type": "object",
    "required": [
        "_producer",
        "_schemaURL"
    ],
    "properties": {
        "_producer": {
            "type": "string",
            "format": "uri"
        },
        "_schemaURL": {
            "type": "string",
            "format": "uri"
        },
        "title": {
            "type": [
                "string",
                "null"
            ]
        },
        "description": {
            "type": [
                "string",
                "null"
            ]
        },
        "accessLevel": {
            "type": [
                "string",
                "null"
            ],
            "enum": [
                "open",
                "internal",
                "restricted"
            ],
            "description": "Dataset access level for policy enforcement"
        },
        "attribution": {
            "type": [
                "string",
                "null"
            ],
            "description": "Mandatory attribution text required by data license"
        },
        "access_requirements": {
            "type": [
                "string",
                "null"
            ],
            "enum": [
                "all",
                "partner",
                "contract"
            ],
            "description": "Preconditions required to access this dataset"
        },
        "classification": {
            "type": [
                "string",
                "null"
            ],
            "enum": [
                "pii",
                "red",
                "yellow",
                "green"
            ],
            "description": "Data classification level"
        },
        "retentionDays": {
            "type": [
                "integer",
                "null"
            ],
            "description": "Data retention period in days"
        },
        "license": {
            "type": [
                "string",
                "null"
            ],
            "description": "License identifier or URL"
        },
        "sourceSystem": {
            "type": [
                "string",
                "null"
            ],
            "description": "Source system that produced this dataset"
        },
        "userFilterColumn": {
            "type": [
                "string",
                "null"
            ],
            "description": "Column name containing user sub for row-level filtering. When set, non-admin users can only see rows where this column matches their JWT sub claim."
        },
        "owners": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "type": "string"
            },
            "description": "List of owners in format 'group:/path' or 'user:sub'"
        }
    }
}